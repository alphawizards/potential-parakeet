# Environment Configuration for Trading Pipeline
# Copy this file to .env and fill in your values

# ============== SECURITY ==============
# Generate hash: python -c "import hashlib; print(hashlib.sha256(b'your-key').hexdigest())"
API_KEY_HASH=
# Fallback for development only (not recommended for production)
API_KEY=dev-key-change-me

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============== TRADING ==============
RISK_FREE_RATE=0.04
TRADING_DAYS_PER_YEAR=252

# ============== CACHE ==============
CACHE_EXPIRY_HOURS=24

# ============== FEATURE FLAGS ==============
USE_VECTORBT=true
VECTORBT_TIMEOUT=30

# ============== DATABASE ==============
# Local Development: SQLite (default)
DATABASE_URL=sqlite:///./data/trades.db

# Production: Neon PostgreSQL (set USE_NEON=true to activate)
USE_NEON=false
NEON_DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.us-east-1.aws.neon.tech/potential_parakeet?sslmode=require

# Database credentials (for manual construction if needed)
DB_USERNAME=
DB_PASSWORD=
DB_HOST=
DB_NAME=potential_parakeet

# ============== AWS CONFIGURATION ==============
# AWS Credentials (leave empty to use IAM role in Lambda)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Secrets Manager
AWS_SECRETS_MANAGER_NAME=potential-parakeet/prod

# S3 Cache Configuration
USE_S3_CACHE=false
S3_BUCKET_NAME=potential-parakeet-cache
S3_CACHE_PREFIX=cache/

# Lambda Configuration (auto-detected in Lambda environment)
IS_LAMBDA=false
LAMBDA_TASK_ROOT=

# ============== API KEYS ==============
# Tiingo API (US stocks, ETFs, Gold)
TIINGO_API_KEY=your-tiingo-api-key-here
TIINGO_IS_PREMIUM=true
